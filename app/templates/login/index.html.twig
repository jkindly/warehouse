{% extends 'base.html.twig' %}

{% block body %}
    <section class="login">
        <h3>{{ 'app.title'|trans }}</h3>
        <div class="login__form">
            <form action="{{ path('app_login') }}" method="post">
                <div class="form-group">
                    <label>
                        <input type="email" class="form-control" placeholder="email" name="_username" value="{{ last_username }}">
                    </label>
                </div>

                <div class="form-group mt-3">
                    <label>
                        <input type="password" class="form-control" placeholder="password" name="_password">
                    </label>
                </div>

                {% if error %}
                    <div class="mt-2 text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-login w-100 mt-5" type="submit">{{ 'app.login_form.button.text'|trans }}</button>
            </form>
        </div>
    </section>
{% endblock %}
